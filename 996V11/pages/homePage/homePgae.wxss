 z-index: 1;
}
.homeMian>view:last-child>view{
  position: relative;
  z-index: 2;
  font-size: 30rpx;
  padding: 70rpx 50rpx 0 50rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  font-family: PingFang-SC-Medium;
  /* margin-top: 70rpx; */
  
}
.homeMian .contet{
