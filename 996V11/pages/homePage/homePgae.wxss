  margin-right: 30rpx;
}
/*  */
.company{
  margin: 40rpx 0 30rpx;
  line-height: 50rpx;

}
.company view{
  min-height: 50rpx;
}
/*  */
.message{
  display: flex;
  justify-content: space-between;
}
.message>view{
  display: flex;
  align-items: center;
}
.message>view image{
  width: 32rpx;
  margin-right: 7rpx;

}
/* 联系 */
.relation{
  display: flex;
  justify-content: space-between;
  z-index: 5;
  position: relative;
  padding-bottom: 35rpx !important;
}
.relation .arrowUp image{
  width: 32rpx;
  height: 32rpx;
}
.relation .arrowDown image{
   
   transition: transform 0.2s; 
   transform: rotate(180deg);
}
.relation .share image{
  width: 62rpx;
  height: 63rpx;
}
.relation .code image{
  width: 83rpx;
  height: 83rpx;
}
/* 滑动 */
.sliding{
  color: #929191;
  font-family: PingFang-SC-Bold;
  font-size: 30rpx;
  position: relative;
  z-index: 1;
  text-align: center;
}
/* 最底部 */
.foot_box{
    height: 197rpx;
    width: 100vw;
}
.foot{
  display: flex;
  justify-content: space-around;
    position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  z-index: 1;
   color: #fff;
  text-align: center;
  font-family: Adobe Heiti Std R;
  margin-top: 10rpx;
  font-size: 30rpx;
  margin-bottom:18rpx; 
  }
.foot .footCircle{
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  background: #fff;
