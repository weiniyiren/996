@import "../../pub/header/header.wxss";
page{
  background: #F2F2F2;
}
.search{
  width:750rpx;
height:120rpx;
background:rgba(255,255,255,1);
border-bottom: 11rpx solid #F2F2F2;
overflow: hidden;
}
.search_box{
  width:702rpx;
height:72rpx;
background:rgba(242,242,242,1);
border-radius:36rpx;
  margin: 24rpx;
text-align: center;
  position: relative;
}
.search_box image{
  width: 34rpx;
  height: 35rpx;
  margin: 19rpx auto  auto  272rpx;
  float: left;
}
.search_box text{
  font-size:28rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(194,194,194,1);
line-height:76rpx;
float: left;
margin-left: 20rpx;
}
.search_box input{
  margin: 0;
  padding: 0;
  width: 100%;
  height:100%;
   text-align: center;
   position: absolute;
   top: 0;
   left: 0;
}
.commodity{
  width:750rpx;
height:170rpx;
background:rgba(255,255,255,1);
border-bottom:1rpx solid rgba(230, 230, 230, 1);
overflow: hidden;
position: relative;
display: flex;
z-index: 2;
}
.touxian{
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin: 30rpx auto auto 24rpx;
  background: #F2F2F2;
}
.touxian image{
  width: 100%;
  height: 100%;
}
.commodity_con{
  float: left;
  margin-left:19rpx;
   overflow: hidden;
   /* width: 430rpx; */
}
.commodity_con_one{
  margin-top: 30rpx;
  height: 29rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.commodity_con_one .name,.commodity_con_one .position{
  font-weight: bold;
  font-size: 30rpx;
  color: #000000;
  float: left;
  line-height: 29rpx;
  padding-right: 30rpx;
  border-right:1rpx solid #F2F2F2; 
  /* margin-left: 40rpx; */
}
.commodity_con_one .position{
    font-weight: normal;
    color: #FE9B3A;
    border: none;
    padding-left:30rpx;padding-right:0;
    overflow: hidden;
    float: left;
    /* max-width: 280rpx; */
    text-overflow:ellipsis;
    /* background: #999; */
}
.commodity_con_two{
  width:430rpx;
height:26rpx;
font-size:24rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(128,128,128,1);
line-height:26rpx;
float: left;
margin-top: 22rpx;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.icon{
  float: left;
margin-top: 13rpx;
overflow: hidden;
}
.icon image{
  float: left;
margin-right: 24rpx;
width:24rpx;
}
.qq_box{
width:750rpx;
height:170rpx;
background:rgba(0,0,0,1);
opacity:0.6;
position: absolute;
display: flex;
justify-content: space-around;
flex-direction: row;
flex-wrap: nowrap;
align-items:center;
}
.qqBox_item{
 overflow: hidden;
 text-align: center;
 font-size:22rpx;
 color:rgba(255,255,255,1);

}
.qqBox_item text{
display: block;

}
.qqBox_item image{
margin: 8rpx auto;
  width: 50rpx;
  height: 56rpx;
display: block;
  
}
.agree{
  width:120rpx;
height:60rpx;
background:rgba(241,169,59,1);
border-radius:30rpx;
float: right;
margin: 55rpx 24rpx auto auto;
text-align: center;
line-height: 60rpx;
font-size:28rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(255,255,255,1);
}
.agree_tab{
  background: #999;
}
.qq_box_show{
  width: 100vw;
  height: 100vh;
  z-index: 0;
  position: fixed;
  top: 0;
  left: 0;
  /* background: pink; */
opacity: 10;  
}